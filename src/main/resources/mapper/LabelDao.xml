<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leetcode.mapper.LabelDao">

    <resultMap type="com.leetcode.entity.Label" id="LabelMap">
        <result property="labelid" column="labelId" jdbcType="INTEGER"/>
        <result property="labelname" column="labelName" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="LabelMap">
        select
          labelId, labelName
        from leetcode.label
        where labelId = #{labelid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="LabelMap">
        select
          labelId, labelName
        from leetcode.label
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="LabelMap">
        select
        labelId, labelName
        from leetcode.label
        <where>
            <if test="labelid != null">
                and labelId = #{labelid}
            </if>
            <if test="labelname != null and labelname != ''">
                and labelName = #{labelname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="labelid" useGeneratedKeys="true">
        insert into leetcode.label(labelName)
        values (#{labelname})
    </insert>

    <insert id="insertBatch" keyProperty="labelid" useGeneratedKeys="true">
        insert into leetcode.label(labelName)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.labelname})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="labelid" useGeneratedKeys="true">
        insert into leetcode.label(labelName)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.labelname})
        </foreach>
        on duplicate key update
        labelName = values(labelName)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update leetcode.label
        <set>
            <if test="labelname != null and labelname != ''">
                labelName = #{labelname},
            </if>
        </set>
        where labelId = #{labelid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from leetcode.label where labelId = #{labelid}
    </delete>

</mapper>

